#include <vector>

using namespace std;

class Solution {
public:
    int minDays(vector<int> bloomDay, int m, int k) {
        int n = bloomDay.size();
        
        if(n < m * k) return -1;
        
        int min = (int) 1e9, max = 1;
        
        for(int day : bloomDay) {
            min = std::min(min, day);
            max = std::max(max, day);
        }
        
        while(min < max) {
            int mid = min + (max - min) / 2;
            if(hasBouquets(bloomDay, m, k, mid)) 
                max = mid;
            else min = mid + 1;
        }
        return min;
    }

    bool hasBouquets(vector<int> bloomDay, int m, int k, int day) {
        int left = bloomDay.size(), flowers = 0;
        
        for(int i = 0; i < bloomDay.size(); i++) {
            int d = bloomDay[i];
            left--;
            
            if(d <= day) {
                flowers++;
            } 
            else {
                m -= flowers / k;
                
                if(m <= 0) 
                    return true;
                
                if(left < m * k) 
                    return false;
                
                flowers = 0;
            }
        }
        return flowers / k >= m;
    }
};
