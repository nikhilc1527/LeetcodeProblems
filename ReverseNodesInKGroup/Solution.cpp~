#include <iostream>

#include "../Nodes.h"

class Solution {
public:
  ListNode* reverseKGroup(ListNode* head, int k) {
    ListNode tempHead(0, head);
    ListNode *begin = &tempHead, *prev, *cur, *next, *end = begin;
    while (true) {
      int i = 0;
      for (i = 0; i < k; i++) {
	if (!end) break;
	else end = end->next;
      }
      if (i < k) break;
      prev = begin->next;
      cur = prev->next;
      next = cur->next;
      while (next != end) {
	cur->next = prev;
	cur = next;
	next = cur->next;
	prev = prev->next;
      }
      cur->next = prev;
      begin->next->next = end;
      begin->next = cur;
    }

    return tempHead.next;
  }
};

int main() {
  Solution s;
  ListNode *head = makeList({5, 3, 4, 2, 6, 1});
  ListNode *res = s.reverseKGroup(head, 2);
  std::cout << listNodeToString(res) << std::endl;
}
