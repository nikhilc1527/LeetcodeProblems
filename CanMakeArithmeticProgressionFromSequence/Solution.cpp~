#include <vector>
#include <cstring>

class Solution {
public:
  bool canMakeArithmeticProgression(std::vector<int>& arr) {
        if (arr.size() <= 1) return true;
        
        int min = 1e6, max = -1e6;
        for (auto &i : arr) {
            if (i < min) min = i;
            if (i > max) max = i;
        }
        
        int freqs[max - min + 1];
        memset(&freqs, 0, (max - min + 1) * sizeof(int));

	for (auto &i : arr) {
	  freqs[i]++;
	}

	
    }
};
